<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div id="exam-window">
        <p>Email: <%= email %></p>   
    <% if (questions.length > 0 ) { %>
        <% questions.forEach(question => { %>
        <div>
                <p><%= question.id %>. <%= question.question_text %></p>
                <label for="option_a">
                    <input type="radio" name="<%= question.id %>" id="option_a" value="A">
                    A. <%= question.option_a %>
                </label>
                <label for="option_b">
                    <input type="radio" name="<%= question.id %>" id="option_b" value="B">
                    B. <%= question.option_b %>
                </label>
                <label for="option_c">
                    <input type="radio" name="<%= question.id %>" id="option_c" value="C">
                    C. <%= question.option_c %>
                </label>
                <label for="option_d">
                    <input type="radio" name="<%= question.id %>" id="option_d" value="D">
                    D. <%= question.option_a %>
                </label>
                <!-- <button id="clear-btn" style="display: none;">Clear my choice</button> -->
        </div>
        <% }) %>
        <p id="err"></p>
        <button type="submit" onclick="submitAnswers('<%= email %>')">Submit</button>
    <% } else { %>
        <% console.log('no') %>
    <% } %>
    </div>

    <div id="success-window" style="display: none;">
        <p id="success-text"></p>
        <a href="http://localhost:4000">Go back to home</a>
    </div>
    <script src="/js/entranceExam.js"></script>
</body>
</html>